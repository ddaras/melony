{
  "name": "melony",
  "version": "0.2.6",
  "main": "dist/index.js",
  "type": "module",
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "clean": "rimraf dist",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "prepack": "node ../../scripts/replace-workspace-protocols.mjs && npm run build",
    "postpack": "node ../../scripts/restore-workspace-protocols.mjs"
  },
  "keywords": [
    "ai",
    "agents",
    "runtime",
    "typescript",
    "events"
  ],
  "author": "",
  "license": "MIT",
  "description": "Fast, unopinionated, minimalist event-based framework for AI agents.",
  "bin": {
    "melony": "./dist/cli.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "import": "./dist/client.js",
      "default": "./dist/client.js"
    },
    "./package.json": "./package.json"
  },
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@types/node": "^24.10.1",
    "rimraf": "^5.0.10",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "commander": "^14.0.2",
    "dotenv": "^16.4.5"
  }
}
